#include <iostream>
#include <string>

using namespace std;

int main() {
    string nomes[10]; // cria um vetor de strings com capacidade para 10 nomes
    
    // realiza o cadastro dos nomes
    for (int i = 0; i < 10; i++) {
        cout << "Digite o nome da pessoa: ";
        getline(cin, nomes[i]);
    }
    
    // lista os nomes cadastrados
    cout << "\Nomes cadastrados:" << endl;
    for (int i = 0; i < 10; i++) {
        cout << (i+1) << ". " << nomes[i] << endl;
    }
    
    return 0;
}

